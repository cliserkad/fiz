path test.fiz.scanner

import {
    java.util.Scanner
    java.lang.System
}

type EchoLoop {
  main {
    Scanner scan = Scanner(System.in)
    println("Type \"exit\" to exit")
    boolean~ continue = true
    while continue {
      string input = scan.nextLine()
      if input == "exit" {
        continue = false
      } else {
        println(input)
      }
    }
  }
}
